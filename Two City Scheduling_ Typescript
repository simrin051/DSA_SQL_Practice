function twoCitySchedCost(costs: number[][]): number {
costs.sort(sortFunction);
    var sum =0;
      for(var i=0;i<costs.length;i++) {
          if(i<costs.length/2) {
              sum= sum + costs[i][0];
          } else {
              sum= sum + costs[i][1];
          }
      }  
    return sum;
}  

function sortFunction(a, b) {   
        return (a[0] - a[1]) - (b[0] - b[1]);
}

